/! require 'date'

h1 Historique des courses
h2 distance totale #{km} km
/!em #{items}

div class="frame dragscroll"

  - items.each do |item|

    div.slider
      /! h2 #{Date.strptime(item, "%Y-%m-%d")}
      h2 #{Date.strptime(item, "%Y-%m-%d").strftime("%-d %b %Y")}
      img src="/img/#{item}.png" alt="image"
      p MM'ss
      p X.x km
      p M:ss /km


